                }

                if (targetX <= maxScroll) {
                    targetX = maxScroll;
                    $(e.currentTarget).closest(".scrollRowWrapper").find("a.scrollNav.next").addClass("disabled");
                } else {
                    $(e.currentTarget).closest(".scrollRowWrapper").find("a.scrollNav.next").removeClass("disabled");
