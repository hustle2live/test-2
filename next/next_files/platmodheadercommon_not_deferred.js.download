            for (var i = 0; i < curItem.PersonalisationFields.length; i++) {
                if (curItem.PersonalisationFields[i].Field == "image") {
                    abbItemContainsImage = true;
                    abbImgUrl = curItem.PersonalisationFields[i].Value;
                    break;
