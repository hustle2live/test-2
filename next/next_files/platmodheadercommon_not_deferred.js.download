            }
            // obtain Custom item image for shopping bag
            for (var i = 0; i < curItem.CustomItemFields.length; i++) {
                if (curItem.CustomItemFields[i].Field == "image") {
                    abbItemContainsImage = true;
                    abbImgUrl = curItem.CustomItemFields[i].Value;
