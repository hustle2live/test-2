function SpreadTransition(left) {
    var $ = jQuery;

    // Is spread expanded?
    var $exp = $(".SpreadsPage .Expanded:visible");
    if ($exp.length) {

        doAnimation(function () {
            var src = $(".ImageLayer img").attr("src");
            var $img = $exp.find("img");
