        //browserName = "msie" + $.browser.version.split('.')[0];
        browserName = "ie11TouchDevice";
    }
    if (!(window.ActiveXObject) && "ActiveXObject" in window) {
        browserName = "msie11";
    }

    $('body').addClass(browserName);
}

